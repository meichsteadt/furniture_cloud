<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="input-field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate" %>
  </div>

  <div class="input-field">
    <%= f.label :password %>
    <%= f.password_field :password, class: "validate", placeholder: ' ' %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>


  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign in", class: "waves-effect waves-light btn blue lighten-2" %>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
