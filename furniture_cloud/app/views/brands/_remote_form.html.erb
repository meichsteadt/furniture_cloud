<h5>Create Brand</h5>
<%= form_for([current_user, brand], remote: true) do |f| %>
  <% if brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col l6 s12">
      <%= f.text_field :name, class: "validate", required: true %>
      <%= f.label :name, "Name *" %>
    </div>

    <div class="input-field col l6 s12">
      <%= f.text_field :logo, class: "validate" %>
      <%= f.label :logo, "Logo URL" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "waves-effect waves-light btn orange lighten-2" %>
  </div>
<% end %>
